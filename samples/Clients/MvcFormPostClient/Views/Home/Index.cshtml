@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>IdentityServer v3</h1>
    <p class="lead">OpenID Connect FormPost Sample</p>
</div>

<div class="row">
    <div class="col-md-10">
        <h3>Identity</h3>
        @if (User.Identity.IsAuthenticated)
        {
            <p>
                authenticated
            </p>
        }
        else
        {
            <p>
                anonymous
            </p>
        }
    </div>
</div>