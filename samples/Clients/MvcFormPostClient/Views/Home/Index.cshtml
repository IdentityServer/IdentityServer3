@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>IdentityServer v3</h1>
    <p class="lead">OpenID Connect FormPost Sample</p>
</div>

<div class="row">
    <div class="col-md-10">
        <h3>Identity</h3>
        @if (User.Identity.IsAuthenticated)
        {
            <p>
                <dl>
                    @foreach (var claim in System.Security.Claims.ClaimsPrincipal.Current.Claims)
                    {
                        <dt>@claim.Type</dt>
                        <dd>@claim.Value</dd>
                    }
                </dl>
            </p>
        }
        else
        {
            <p>
                anonymous.
            </p>
        }
    </div>
</div>